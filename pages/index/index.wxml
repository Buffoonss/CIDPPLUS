<!--index.wxml-->
<van-dialog id="van-dialog" />
<view class="index_body" style="background:{{mainColor}}">
  <view class="index_body_in">
    <view id="LOGO-banner" class="index_box">
      <text class="logo"  style="color:{{secondaryColor}}">CIDP+</text>
      <text class="logo_">防灾学子的移动教务助手</text>
    </view>
    <view class="index_box" style="padding-bottom:15rpx;">
      <view class="card">
        <view style="display:flex;">
          <view class="img_box">
            <van-image bind:tap="changeLogin" round width="100%" height="100%" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" />
          </view>
          <view class="right_title">
            <view wx:if="{{LOGIN_FLAG==false}}" style="display:flex; align-items: center;">
              <view id="circle" class="circle" ></view>
              <text id="status" class="logo_" style="color:{{fontColor}};font-size:15pt;">{{loginStatu}}</text>
            </view>
            <view wx:if="{{LOGIN_FLAG==true}}">
              <text class="logo " style="color:{{fontColor}};font-size:16pt;line-height: 1.5em;">欢迎你，{{USERNAME}}!</text>
            </view>
            <view id="PROCESS" wx:if="{{LOGIN_FLAG==true}}" style="display:block;justify-content：right；">
              <text class="logo_ " style="color:grey;font-size:8pt;margin:0;">{{PROCESS}}</text>
            </view>
          </view>
        </view>

      </view>
    </view>

    <view class="index_box" style="padding-bottom:15rpx;">
      <view class="card" style="height:320rpx;flex-flow: column;padding:5rpx;">
        <van-grid square>
          <van-grid-item icon="{{item.icon}}" text="{{item.text}}" link-type="{{item.type}}" url="{{item.url}}" wx:for="{{gird}}" />
        </van-grid>
      </view>
    </view>

    <view class="index_box">
      <text class="logo_" style="padding-bottom:5rpx;">今日课表</text>
      <view class="card" style="height:300rpx"> </view>
    </view>

  </view>
</view>