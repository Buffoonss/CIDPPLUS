<!-- pages/login/login.wxml -->
<van-notify id="van-notify" />
<van-toast id="van-toast" />
<view class="index_body">

    <view class="index_body_in">
        <view id="LOGO-banner" class="index_box" style="margin-top：20rpx;margin-bottom:100rpx;padding-top:40rpx;">
            <text class="logo" style="color:{{mainColor}}">CIDP+</text>
        </view>
        <view class="index_box">
            <input class="input-vant" bindinput="onChangeUser" placeholder="请输入学号" type="text" style="color:{{btnTextColor}}" placeholder-class="input-pla" value="{{stid}}"></input>
            <van-divider style="--divider-margin:5px 5px;-divider-line-height:20px)" />
            <input class="input-vant" bindinput="onChangePwd" placeholder="请输入办事大厅密码" type="password" value="{{stpwd}}" placeholder-class="input-pla"></input>
            <button class="roundBTN" style="background-color:{{mainColor}}" hover-class="roundBTN_hover" data-user="{{stid}}" data-pwd="{{stpwd}}" bindtap="loginBefore">
                <text>{{btnText}}</text>
            </button>
        </view>
    </view>
</view>